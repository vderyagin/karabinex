{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "useDefineForClassFields": true,
    "resolveJsonModule": true,
    "types": ["bun-types"],
    "lib": ["ES2022"]
  },
  "include": ["src", "tests"]
}
